{
  "name": "go-wasm-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "wasm": "gowasm-bindgen go/wasm/main.go --output src/generated && mkdir -p public && cp src/generated/worker.js src/generated/wasm_exec.js src/generated/wasm.wasm public/",
    "prebuild": "npm run wasm",
    "predev": "npm run wasm",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . && cd go && go vet ./... && test -z \"$(gofmt -l .)\"",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" && cd go && gofmt -w .",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" && cd go && test -z \"$(gofmt -l .)\"",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:go": "cd go && go test ./...",
    "test:all": "npm run test:go && npm run test"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.18"
  }
}
